{
    "$schema": "http://json.schemastore.org/template",
    "author": "StaticSharp",
    "classifications": [ "StaticSharp", "Web", "Console" ],
    "identity": "StaticSharp.Templates",
    "name": "StaticSharp Web Application",
    "shortName": "staticsharp",
    "sourceName": "StaticSharpProjectTemplate",
    "description": "Project template of a static web site based on StaticSharp platform",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "symbols": {
        "multilanguage": {
            "displayName": "Multilanguage",
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Append support for site localization"
        },
        "vscodesupport": {
            "displayName": "VsCode support",
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Prepare for lanuch from VsCode and StaticSharp extension usage"
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "condition": "(!multilanguage)",
                    "exclude": [
                        "Root/Root_Ru.cs"
                    ]
                },
                {
                    "condition": "(!vscodesupport)",
                    "exclude": [
                        ".vscode/**"
                    ]
                }
            ]
        }
    ],
    "preferNameDirectory": "true",
    "SpecialCustomOperations": {
        "**/*.xaml": {
            "operations": [
                {
                    "type": "conditional",
                    "configuration": {
                        "actionableIf": [ "<!--#if" ],
                        "actionableElse": [ "#else", "<!--#else" ],
                        "actionableElseif": [ "#elseif", "<!--#elseif" ],
                        "endif": [ "#endif", "<!--#endif" ],
                        "trim": "true",
                        "wholeLine": "true"
                    }
                }
            ]
        }
    }
}